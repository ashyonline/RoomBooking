<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="title_style">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginTop">@dimen/simple_margin</item>
        <item name="android:layout_marginBottom">@dimen/simple_margin</item>
        <item name="android:padding">@dimen/card_margin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@color/primary_light</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="subtitle_style">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginTop">@dimen/thin_margin</item>
        <item name="android:layout_marginBottom">@dimen/thin_margin</item>
        <item name="android:padding">@dimen/simple_margin</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="time_style">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_margin">@dimen/thin_margin</item>
    </style>

    <style name="description_container_style" parent="title_style">
        <item name="android:padding">@dimen/thin_margin</item>
        <item name="android:layout_marginLeft">@dimen/simple_margin</item>
        <item name="android:layout_marginRight">@dimen/simple_margin</item>
        <item name="android:layout_marginBottom">@dimen/thin_margin</item>
        <item name="android:layout_marginTop">@dimen/simple_margin</item>
        <item name="android:background">@drawable/data_background</item>
    </style>

    <style name="error_style" parent="title_style">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="description_style" parent="subtitle_style">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">@dimen/simple_margin</item>
        <item name="android:layout_marginRight">@dimen/simple_margin</item>
        <item name="android:layout_marginBottom">@dimen/thin_margin</item>
        <item name="android:layout_marginTop">@dimen/thin_margin</item>
    </style>

    <style name="button_style" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_gravity">end</item>
        <item name="android:padding">@dimen/simple_margin</item>
    </style>

    <style name="input_style" parent="field_style">
        <item name="android:background">@drawable/input_background</item>
    </style>

    <style name="field_style" parent="subtitle_style">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">@dimen/simple_margin</item>
        <item name="android:layout_marginRight">@dimen/simple_margin</item>
        <item name="android:layout_marginTop">@dimen/simple_margin</item>
    </style>

    <style name="participant_style">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/simple_margin</item>
        <item name="android:layout_margin">@dimen/thin_margin</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="spinner_style" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_margin">@dimen/simple_margin</item>
    </style>

</resources>
