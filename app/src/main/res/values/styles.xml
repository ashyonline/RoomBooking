<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="title_style">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginTop">@dimen/simple_margin</item>
        <item name="android:layout_marginBottom">@dimen/simple_margin</item>
        <item name="android:padding">@dimen/card_margin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@color/primary_light</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="description_style" parent="title_style">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">@dimen/thin_margin</item>
        <item name="android:layout_marginLeft">@dimen/simple_margin</item>
        <item name="android:layout_marginRight">@dimen/simple_margin</item>
        <item name="android:layout_marginBottom">@dimen/thin_margin</item>
        <item name="android:layout_marginTop">@dimen/simple_margin</item>
        <item name="android:background">@drawable/data_background</item>
    </style>

    <style name="error_style" parent="title_style">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
